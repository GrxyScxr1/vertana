{
  "workspace": [
    "packages/*"
  ],
  "imports": {
    "@ai-sdk/anthropic": "npm:@ai-sdk/anthropic@^3.0.1",
    "@ai-sdk/provider": "npm:@ai-sdk/provider@^3.0.0",
    "@ai-sdk/google": "npm:@ai-sdk/google@^3.0.1",
    "@ai-sdk/openai": "npm:@ai-sdk/openai@^3.0.1",
    "@logtape/logtape": "jsr:@logtape/logtape@^1.3.5",
    "@napi-rs/keyring": "npm:@napi-rs/keyring@^1.2.0",
    "@optique/core": "jsr:@optique/core@^0.8.5",
    "@optique/logtape": "jsr:@optique/logtape@^0.8.5",
    "@optique/run": "jsr:@optique/run@^0.8.5",
    "@standard-schema/spec": "npm:@standard-schema/spec@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@standard-community/standard-json": "npm:@standard-community/standard-json@^0.3.5",
    "@valibot/to-json-schema": "npm:@valibot/to-json-schema@^1.5.0",
    "ai": "npm:ai@^6.0.3",
    "dom-serializer": "npm:dom-serializer@^2.0.0",
    "domhandler": "npm:domhandler@^5.0.3",
    "htmlparser2": "npm:htmlparser2@^10.0.0",
    "js-tiktoken": "npm:js-tiktoken@^1.0.21",
    "linkedom": "npm:linkedom@^0.18.12",
    "@mozilla/readability": "npm:@mozilla/readability@^0.6.0",
    "valibot": "npm:valibot@^1.2.0",
    "zod": "npm:zod@^4.2.1"
  },
  "exclude": [
    ".github/",
    "docs/",
    "tmp/"
  ],
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md",
      "*.yaml",
      "**/*.yaml",
      "*.yml",
      "**/*.yml"
    ]
  },
  "tasks": {
    "check-versions": "deno run --allow-read --allow-write scripts/check_versions.ts",
    "check": {
      "dependencies": [
        "check-versions"
      ],
      "command": "deno check && deno lint && deno fmt --check && deno publish --dry-run --allow-dirty"
    },
    "test": "deno test --allow-env --allow-net --allow-read --allow-write --allow-ffi --allow-sys --env-file=.env.test --parallel",
    "test:node": "pnpm run -r test",
    "test:bun": "pnpm run -r test:bun",
    "test-all": {
      "dependencies": [
        "check",
        "test",
        "test:node",
        "test:bun"
      ]
    },
    "install": {
      "dependencies": [
        "hooks:install"
      ],
      "command": "deno cache packages/*/src/**/*.ts && pnpm install"
    },
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": {
      "dependencies": [
        "check"
      ]
    }
  }
}
