{
  "name": "@vertana/facade",
  "version": "0.1.0",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts"
  },
  "exclude": [
    "dist/",
    "tsdown.config.ts"
  ],
  "tasks": {
    "build": "pnpm build",
    "test": "deno test --allow-env --allow-net",
    "test:node": {
      "dependencies": [
        "build"
      ],
      "command": "node --experimental-transform-types --test"
    },
    "test:bun": {
      "dependencies": [
        "build"
      ],
      "command": "bun test"
    },
    "test-all": {
      "dependencies": [
        "test",
        "test:node",
        "test:bun"
      ]
    }
  }
}
